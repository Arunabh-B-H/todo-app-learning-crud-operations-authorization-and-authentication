<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo App</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .container {
      width: 100%;
      max-width: 800px;
      background-color: #fff;
      padding: 2em;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2em;
    }

    .user-info {
      font-size: 1.2em;
    }

    .user-info span {
      font-weight: bold;
    }

    .user-info a {
      color: #d9534f;
      text-decoration: none;
      margin-left: 10px;
    }

    .user-info a:hover {
      text-decoration: underline;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-bottom: 2em;
    }

    input,
    textarea,
    button {
      padding: 0.8em;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      background-color: #5cb85c;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 1em;
    }

    button:hover {
      background-color: #4cae4c;
    }

    .todo-list {
      list-style: none;
      padding: 0;
    }

    .todo-item {
      background-color: #f9f9f9;
      border: 1px solid #eee;
      padding: 1em;
      border-radius: 4px;
      margin-bottom: 1em;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .todo-item-content {
      flex-grow: 1;
    }

    .todo-item h3 {
      margin: 0 0 5px 0;
    }

    .todo-item p {
      margin: 0;
      color: #666;
    }

    .todo-actions {
      display: flex;
      gap: 10px;
    }

    .todo-actions button,
    .todo-actions a {
      padding: 0.5em;
      border-radius: 4px;
      text-decoration: none;
      color: white;
      font-size: 0.9em;
    }

    .edit-btn {
      background-color: #0275d8;
    }

    .delete-btn {
      background-color: #d9534f;
      border: none;
      cursor: pointer;
    }
  </style>
</head>

<body>
  <div class="container">
    <header>
      <h1>Your Todos</h1>
      <% if (user) { %>
      <div class="user-info">
        Hello, <span><%= user.username %></span>
        <a href="/logout">Logout</a>
      </div>
      <% } else { %>
      <div class="user-info">
        <a href="/login">Login</a> | <a href="/register">Register</a>
      </div>
      <% } %>
    </header>

    <% if (user) { %>
    <form action="/create" method="POST">
      <h2>Create New Todo</h2>
      <input type="text" name="title" placeholder="Title" required>
      <textarea name="description" placeholder="Description (optional)"></textarea>
      <button type="submit">Add Todo</button>
    </form>

    <ul class="todo-list">
      <% if (todos && todos.length > 0) { %>
      <% todos.forEach(todo => { %>
      <li class="todo-item">
        <div class="todo-item-content">
          <h3><%= todo.title %></h3>
          <p><%= todo.description %></p>
        </div>
        <div class="todo-actions">
          <a href="/edit/<%= todo._id %>" class="edit-btn">Edit</a>
          <form action="/delete/<%= todo._id %>" method="POST" style="display:inline;">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </div>
      </li>
      <% }); %>
      <% } else { %>
      <p>No todos found. Create one above!</p>
      <% } %>
    </ul>
    <% } %>
  </div>
</body>

</html>